[core]
    autocrlf = true
    whitespace = cr-at-eol
    pager = delta --diff-highlight
[interactive]
    diffFilter = delta --diff-highlight
[diff]
    tool = p4merge
[difftool]
    prompt = false
[merge]
    tool = p4merge
[mergetool]
    keepBackup = false
[mergetool "p4merge"]
    trustExitCode = true
